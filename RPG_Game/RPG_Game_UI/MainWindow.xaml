<Window x:Class="RPG_Game_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPG_Game_UI"
        mc:Ignorable="d"
        Title="RPG Game" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan='2' Background="AliceBlue">Menu</Label>
        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan='2' Background="Aquamarine">Player</Label>
        <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan='2' Background="Beige">Game Logs</Label>
        <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan='2' Background="BurlyWood">Inventory</Label>
        <Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan='2' Background="Lavender">Combat Controls</Label>
    </Grid>
</Window>
